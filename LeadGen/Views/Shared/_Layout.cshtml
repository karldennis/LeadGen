@using LeadGen.Core
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Lead Scraper</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    
      <link href="../../Content/css/bootstrap.css" rel="stylesheet" type="text/css" />
      <link href="../../Content/css/StyleSheet1.css" rel="stylesheet" type="text/css" />
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
         
      }
      
      th { color: #fff;background-color: #333; border: 1px solid #333}
      td { border: 1px solid #efefef;font-size: 12px; }
    </style>
    <link href="../assets/css/bootstrap-responsive.css" rel="stylesheet">

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Lead Scraper</a>
          <div class="nav-collapse collapse">
              @if (User.Identity.IsAuthenticated)
              {
                  <ul class="nav">
                      <li><a href="/"><i class="icon-plus icon-white"></i> Create a new Job</a></li>
                      <li><a href="/scrapingjob/searches"><i class="icon-briefcase icon-white"></i> Saved Searches</a></li>
                      @*<li><a href="mailto:johnefarrell@gmail.com"></a></li>*@
                  </ul>

                  <ul class="nav pull-right">
                      <li><a>@(((User)@ViewBag.CurrentUser).Email)</a></li>
                      <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
                  </ul>
              } else
              {
                  <ul class="nav pull-right">
                      
                      <li>@Html.ActionLink("Login", "Login", "Account")</li>
                      <li>@Html.ActionLink("Register", "Register", "Account")</li>
                  </ul>
              }
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    

      <div class="container">
                  <section id="main">
                @RenderBody()
            </section>
     
     <div style="width: 400px; margin:30px auto">Problems, Questions, Suggestions?  860-778-2522, johnefarrell@gmail.com, skype: john.e.farrell, twitter: jfarrellism</div>

      </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
      <script src="../../Content/js/bootstrap.js" type="text/javascript"></script>

  </body>
</html>
